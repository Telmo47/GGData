@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirmar email";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info" role="alert">
        @Model.StatusMessage
    </div>
}
else
{
    <p>Obrigado por confirmares o teu email.</p>
}
