@page
@model GGData.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h2>Criar uma nova conta.</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Nome" class="form-control" placeholder="Nome completo" />
        <label asp-for="Input.Nome"></label>
        <span asp-validation-for="Input.Nome" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="email@exemplo.com" />
        <label asp-for="Input.Email"></label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Password" />
        <label asp-for="Input.Password"></label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Confirmar Password" />
        <label asp-for="Input.ConfirmPassword"></label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3">
        <select asp-for="Input.TipoUsuario" class="form-select">
            <option value="">Seleciona o tipo de conta</option>
            <option value="Utilizador">Utilizador</option>
            <option value="Critico">Crítico</option>
        </select>
        <label asp-for="Input.TipoUsuario"></label>
        <span asp-validation-for="Input.TipoUsuario" class="text-danger"></span>
    </div>

    <div id="camposCritico" style="display:none;">
        <div class="form-floating mb-3">
            <input asp-for="Input.Instituicao" class="form-control" placeholder="Instituição" />
            <label asp-for="Input.Instituicao"></label>
            <span asp-validation-for="Input.Instituicao" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <input asp-for="Input.WebsiteProfissional" class="form-control" placeholder="Website profissional" />
            <label asp-for="Input.WebsiteProfissional"></label>
            <span asp-validation-for="Input.WebsiteProfissional" class="text-danger"></span>
        </div>

        <div class="form-floating mb-3">
            <textarea asp-for="Input.DescricaoProfissional" class="form-control" placeholder="Descrição"></textarea>
            <label asp-for="Input.DescricaoProfissional"></label>
            <span asp-validation-for="Input.DescricaoProfissional" class="text-danger"></span>
        </div>
    </div>

    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Criar Conta</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("Input_TipoUsuario").addEventListener("change", function () {
            const tipo = this.value;
            const div = document.getElementById("camposCritico");
            div.style.display = tipo === "Critico" ? "block" : "none";
        });
    </script>
}
