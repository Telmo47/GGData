@model GGData.Models.Avaliacao

<h1>Criar Avaliação</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nota"></label>
        <input asp-for="Nota" class="form-control" />
        <span asp-validation-for="Nota" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comentarios"></label>
        <textarea asp-for="Comentarios" class="form-control"></textarea>
        <span asp-validation-for="Comentarios" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoUsuario"></label>
        <select asp-for="TipoUsuario" class="form-control" asp-items="@(ViewData["TipoUsuario"] as IEnumerable<SelectListItem>)"></select>
        <span asp-validation-for="TipoUsuario" class="text-danger"></span>
    </div>

    <!-- JogoId fixo -->
    <div class="form-group">
        <label asp-for="JogoId"></label>
        <select asp-for="JogoId" class="form-control" asp-items="@(ViewData["JogoId"] as IEnumerable<SelectListItem>)">
            <option value="">-- Seleciona um jogo --</option>
        </select>
        <span asp-validation-for="JogoId" class="text-danger"></span>
    </div>


    <div class="form-group mt-3">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
