@model GGData.Models.Avaliacao

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Avaliação</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="AvaliacaoId" />

            <div class="form-group">
                <label asp-for="Nota" class="control-label"></label>
                <input asp-for="Nota" class="form-control" />
                <span asp-validation-for="Nota" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comentarios" class="control-label"></label>
                <textarea asp-for="Comentarios" class="form-control"></textarea>
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoUsuario" class="control-label"></label>
                <select asp-for="TipoUsuario" class="form-control" asp-items="@(ViewData["TipoUsuario"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="TipoUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="@(ViewData["UsuarioId"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="JogoId" class="control-label"></label>
                <select asp-for="JogoId" class="form-control" asp-items="@(ViewData["JogoId"] as IEnumerable<SelectListItem>)"></select>
                <span asp-validation-for="JogoId" class="text-danger"></span>
            </div>

            <!-- DataReview fica escondido ou editável, conforme necessidade -->
            <input type="hidden" asp-for="DataReview" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
