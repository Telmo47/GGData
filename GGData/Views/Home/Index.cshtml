@model IEnumerable<GGData.Models.Jogo>

@{
    ViewData["Title"] = "GGData - Início";
}

<h1 class="text-center mb-4">GGData</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var jogo in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                <img src="@jogo.ImagemUrl" class="card-img-top" alt="@jogo.Nome" style="max-height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@jogo.Nome</h5>
                    <p class="card-text"><strong>Género:</strong> @jogo.Genero</p>
                    <p class="card-text"><strong>Plataforma:</strong> @jogo.Plataforma</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-outline-info" asp-controller="Estatisticas" asp-action="Details" asp-route-id="@jogo.JogoId">Ver Estatísticas</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-primary" asp-controller="Avaliacaos" asp-action="Create" asp-route-jogoId="@jogo.JogoId">Avaliar</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Login">Avaliar</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
