@model IEnumerable<GGData.Models.Estatistica>

@{
    ViewData["Title"] = "Estatísticas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">Estatísticas</h1>

    @if (User.IsInRole("Administrador"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Criar Nova
        </a>
    }
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Conquistas)</th>
                <th>@Html.DisplayNameFor(model => model.First().TempoMedioJogo)</th>
                <th>@Html.DisplayNameFor(model => model.First().TotalAvaliacoes)</th>
                <th>@Html.DisplayNameFor(model => model.First().MediaNotaUtilizadores)</th>
                <th>@Html.DisplayNameFor(model => model.First().MediaNotaCriticos)</th>
                <th>Jogo</th>
                <th class="text-center">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Conquistas</td>
                    <td>@item.TempoMedioJogo</td>
                    <td>@item.TotalAvaliacoes</td>
                    <td>@item.MediaNotaUtilizadores</td>
                    <td>@item.MediaNotaCriticos</td>
                    <td>@item.Jogo?.Nome ?? "Sem jogo"</td>
                    <td class="text-center">
                        <a asp-action="Details" asp-route-id="@item.EstatisticaId" class="btn btn-sm btn-primary me-1">
                            <i class="bi bi-eye"></i> Detalhes
                        </a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.EstatisticaId" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.EstatisticaId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Apagar
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
