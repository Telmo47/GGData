@model GGData.Models.Estatistica

@{
    ViewData["Title"] = "Criar Estatística";
}

<div class="container mt-4 mb-5">
    <h1 class="mb-4">📊 Criar Estatística</h1>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Create" class="card shadow p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Conquistas" class="form-label"></label>
                        <input asp-for="Conquistas" class="form-control" />
                        <span asp-validation-for="Conquistas" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TempoMedioJogo" class="form-label"></label>
                        <input asp-for="TempoMedioJogo" class="form-control" />
                        <span asp-validation-for="TempoMedioJogo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TotalAvaliacoes" class="form-label"></label>
                        <input asp-for="TotalAvaliacoes" class="form-control" />
                        <span asp-validation-for="TotalAvaliacoes" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MediaNotaUtilizadores" class="form-label"></label>
                        <input asp-for="MediaNotaUtilizadores" class="form-control" />
                        <span asp-validation-for="MediaNotaUtilizadores" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="MediaNotaCriticos" class="form-label"></label>
                        <input asp-for="MediaNotaCriticos" class="form-control" />
                        <span asp-validation-for="MediaNotaCriticos" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="JogoId" class="form-label"></label>
                        <select asp-for="JogoId" class="form-control" asp-items="ViewBag.JogoID">
                            <option value="">Selecione um jogo</option>
                        </select>
                        <span asp-validation-for="JogoId" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Criar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
