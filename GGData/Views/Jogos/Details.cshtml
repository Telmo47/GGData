@model GGData.Models.Jogo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Jogo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">Géneros</dt>
        <dd class="col-sm-10">
            @if (Model.JogoGeneros != null && Model.JogoGeneros.Any())
            {
                @string.Join(", ", Model.JogoGeneros.Select(jg => jg.Genero.Nome))
            }
            else
            {
                <em>Sem géneros</em>
            }
        </dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Plataforma)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Plataforma)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataLancamento)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataLancamento)</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.JogoId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Estatisticas" asp-action="VerEstatisticas" asp-route-id="@Model.JogoId">Ver Estatísticas</a>
</div>
