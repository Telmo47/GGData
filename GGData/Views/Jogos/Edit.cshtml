@model GGData.Models.Jogo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Jogo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="JogoId" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Géneros</label>
                @foreach (var genero in ViewBag.Generos as List<GGData.Models.Genero>)
                {
                    var isChecked = Model.JogoGeneros?.Any(jg => jg.GeneroId == genero.GeneroId) ?? false;
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="GeneroIds" value="@genero.GeneroId" @(isChecked ? "checked" : "") />
                        <label class="form-check-label">@genero.Nome</label>
                    </div>
                }
            </div>


            <div class="form-group">
                <label asp-for="Plataforma" class="control-label"></label>
                <input asp-for="Plataforma" class="form-control" />
                <span asp-validation-for="Plataforma" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataLancamento" class="control-label"></label>
                <input asp-for="DataLancamento" type="date" class="form-control" />
                <span asp-validation-for="DataLancamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImagemUrl" class="control-label"></label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
