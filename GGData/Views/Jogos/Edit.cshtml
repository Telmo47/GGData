@model GGData.Models.Jogo

@{
    ViewData["Title"] = "Editar Jogo";
}

<div class="container mt-4 mb-5">
    <h1 class="mb-4">✏️ Editar Jogo</h1>

    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-action="Edit" class="card shadow p-4">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="JogoId" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Nome do jogo" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Plataforma" class="form-label">Plataforma</label>
                        <input asp-for="Plataforma" class="form-control" placeholder="Ex: PC, PlayStation, Xbox..." />
                        <span asp-validation-for="Plataforma" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="DataLancamento" class="form-label">Data de Lançamento</label>
                        <input asp-for="DataLancamento" type="date" class="form-control" />
                        <span asp-validation-for="DataLancamento" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ImagemUrl" class="form-label">URL da Imagem</label>
                        <input asp-for="ImagemUrl" class="form-control" placeholder="Link para imagem do jogo" />
                        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label">Géneros</label>
                    <div class="row">
                        @foreach (var genero in ViewBag.Generos as List<GGData.Models.Genero>)
                        {
                            var isChecked = Model.JogoGeneros?.Any(jg => jg.GeneroId == genero.GeneroId) ?? false;
                            <div class="col-md-4 mb-2">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="GeneroIds" value="@genero.GeneroId" id="genero_@genero.GeneroId" @(isChecked ? "checked" : "") />
                                    <label class="form-check-label" for="genero_@genero.GeneroId">@genero.Nome</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Voltar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
