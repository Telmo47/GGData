@model GGData.Models.Jogo

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar</h1>

<h3>Tens a certeza que queres apagar este jogo?</h3>
<div>
    <h4>Jogo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Genero)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Genero)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Plataforma)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Plataforma)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DataLancamento)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.DataLancamento)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="JogoId" />
        @* Verifica se não existem avaliações e se não existe estatística associada *@
        @if ((Model.Avaliacoes?.Count ?? 0) == 0 && Model.Estatistica == null)
        {
            <input type="submit" value="Apagar" class="btn btn-danger" />
        }
        else
        {
            <p class="text-danger">Não é possível apagar este jogo pois existem avaliações ou estatísticas associadas.</p>
        }
        <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
    </form>
</div>
